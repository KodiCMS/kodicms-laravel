{
    "name": "laravel/laravel",
    "description": "The Laravel Framework.",
    "keywords": ["framework", "laravel"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=5.5.9",
        "laravel/framework": "5.2.*",
        "kodicms/core": "0.*",
        "kodicms/users": "0.*",
        "kodicms/dashboard": "0.*",
        "kodicms/widgets": "0.*",
        "kodicms/pages": "0.*",
        "kodicms/datasource": "0.*",
        "kodicms/filemanager": "0.*",
        "kodicms/plugins": "0.*",
        "kodicms/userguide": "0.*",
        "kodicomponents/navigation": "^0.3.0",
        "ramsey/uuid": "^3.4",
        "firebase/php-jwt": "^3.0",
        "laravelrus/sleepingowl": "^4.40",
        "arcanedev/log-viewer": "^3.10"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~4.0",
        "phpspec/phpspec": "~2.1",
        "symfony/dom-crawler": "~3.0",
        "symfony/css-selector": "~3.0",
        "barryvdh/laravel-ide-helper": "^2.0"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/",
            "KodiCMS\\": "modules/",
            "Plugins\\": "plugins/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ]
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan optimize",
            "php artisan cms:modules:install"
        ]
    },
    "config": {
        "preferred-install": "dist"
    }
}
